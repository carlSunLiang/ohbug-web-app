{
  "private": true,
  "scripts": {
    "postinstall": "umi g tmp",
    "prebuild": "rimraf dist",
    "start": "cross-env ENV_TAG=development PORT=8888 umi dev",
    "build:test": "cross-env ENV_TAG=test umi build",
    "build": "cross-env ENV_TAG=production umi build",
    "build:analyze": "cross-env ANALYZE=1 umi build",
    "docker:build": "docker build -t ohbug-web-app .",
    "docker:prod": "docker-compose -f docker-compose.yml up --build -d",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage",
    "update:deps": "yarn upgrade-interactive --latest"
  },
  "dependencies": {
    "@ant-design/icons": "^4.1.0",
    "@ant-design/pro-layout": "^6.3.0",
    "@ohbug/browser": "^1.0.3-alpha.0",
    "@ohbug/core": "^1.0.0-alpha.0",
    "@types/react-syntax-highlighter": "^11.0.4",
    "@umijs/preset-react": "^1.5.14",
    "@umijs/test": "^3.2.14",
    "@welldone-software/why-did-you-render": "^4.2.7",
    "ahooks": "^2.4.0",
    "antd": "^4.5.1",
    "clsx": "^1.1.0",
    "dayjs": "^1.8.31",
    "echarts": "^4.8.0",
    "echarts-for-react": "^2.0.16",
    "generate-avatar": "^1.4.4",
    "path-to-regexp": "^6.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-syntax-highlighter": "^13.2.1",
    "redux-persist": "^6.0.0",
    "rrweb-player": "^0.4.3",
    "source-map-trace": "^0.1.2",
    "ua-device": "^0.1.10",
    "umi": "^3.2.14"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@ohbug/types": "^1.0.0-alpha.0",
    "@types/echarts": "^4.6.4",
    "@types/redux-logger": "^3.0.7",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "@umijs/fabric": "^2.0.6",
    "@umijs/plugin-esbuild": "^1.0.0-beta.2",
    "antd-dayjs-webpack-plugin": "^1.0.1",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^7.6.0",
    "eslint-loader": "^4.0.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.1",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.7"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "eslint --fix",
      "prettier --parser=typescript --write",
      "git add"
    ],
    "*.less": [
      "stylelint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
